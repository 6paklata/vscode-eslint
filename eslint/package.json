{
	"name": "vscode-eslint",
	"displayName": "ESLint",
	"description": "Integrates ESLint into VS Code.",
	"version": "0.10.13",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-eslint.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-eslint/issues"
	},
	"publisher": "dbaeumer",
	"icon": "eslint_icon.svg",
	"categories": [
		"Linters"
	],
	"engines": {
		"vscode": "^0.10.8"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onCommand:eslint.executeAutofix"
	],
	"main": "./out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ESLint configuration",
			"properties": {
				"eslint.enable": {
					"type": "boolean",
					"default": true,
					"description": "Control whether eslint is enabled for JavaScript files or not."
				},
				"eslint.enableAutofixOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Control whether eslint errors are auto-fixed when a file is saved."
				},
				"eslint.options": {
					"type": "object",
					"default": {},
					"description": "The eslint options object to provide args to the eslint command."
				}
			}
		},
		"jsonValidation": [
			{
				"fileMatch": ".eslintrc",
				"url": "http://json.schemastore.org/eslintrc"
			},
			{
				"fileMatch": ".eslintrc.json",
				"url": "http://json.schemastore.org/eslintrc"
			}
		],
		"commands": [
			{
				"command": "eslint.executeAutofix",
				"title": "Execute Autofix",
				"category": "ESLint"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run update-vscode && cd ../eslint-server && npm run compile && cd ../eslint && tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"vscode": "^0.11.x",
		"typescript": "^1.8.9"
	},
	"dependencies": {
		"vscode-languageclient": "^2.0.0-pre.3"
	}
}